                    ctx.fillRect(wx, wy, windowWidth, windowHeight);
                    
                    // Add window frame
                    ctx.strokeStyle = 'rgba(80, 80, 80, 0.5)';
                    ctx.lineWidth = 1;
                    ctx.strokeRect(wx, wy, windowWidth, windowHeight);
