        <!-- Loading -->
        <div class="loading" id="loading">
            <div class="loading-spinner"></div>
            <div class="loading-text">Loading Network Topology...</div>
        </div>

        <!-- Header -->
        <div class="topology-header">
            <div class="header-left">
                <div class="header-title">üåê 3D Network Topology <span style="font-size: 0.7em; opacity: 0.6;">v11.2.2</span></div>
                <div class="header-stats">
                    <div class="stat-item">
                        <span>Companies:</span>
                        <span class="stat-value" id="stat-companies">0</span>
                    </div>
                    <div class="stat-item">
                        <span>Devices:</span>
                        <span class="stat-value" id="stats-devices">0</span>
                    </div>
                    <div class="stat-item">
