# Server Configuration
PORT=3000
NODE_ENV=development

# PRTG Server Configurations (comma-separated)
# Format: https://server:port|username|passhash
PRTG_SERVERS=https://prtg1.company.com:443|prtgadmin|1234567890,https://prtg2.company.com:443|prtgadmin|0987654321

# MySQL Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_NAME=prtg_dashboard
DB_USER=prtg_user
DB_PASSWORD=your_secure_password
DB_POOL_MAX=10
DB_POOL_MIN=2
DB_POOL_ACQUIRE=30000
DB_POOL_IDLE=10000

# Data Collection Configuration
COLLECTOR_INTERVAL=60000
RETENTION_DAYS=90

# Cache Configuration (seconds)
CACHE_TTL=30
CACHE_CHECK_PERIOD=60

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/prtg-dashboard.log

# Session retention (hours)
USER_SESSION_RETENTION_HOURS=24

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com

# Refresh Intervals (milliseconds)
POLL_INTERVAL=5000
WEBSOCKET_HEARTBEAT=30000

# Admin users (comma-separated PRTG usernames)
ADMIN_USERS=admin1,admin2
